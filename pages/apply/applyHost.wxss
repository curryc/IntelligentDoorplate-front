/* pages/apply/applyHost.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}
 .suspend {
  flex-shrink: 0;
  background: #e64340;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 -24rpx 0 0;
  padding: 0;
  box-shadow: none;
  border: 0;
  border-radius: 30rpx 0 0 30rpx;
  width: 150rpx;
  height: 60rpx;
  box-sizing: border-box;
  min-height: auto;
  line-height: 1;
  font-weight: normal;
  position: absolute;
  right: 15rpx;
  top: 0;
}

.suspend .image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 17rpx;
}

.suspend .text{
  color: #ffffff;
  font-size: 24rpx;
}

.round-button {
  border-radius: 10px;
  background-color: #e64340;
  color: rgb(255, 255, 255);
}

.input-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
}

.input-item-label {
  font-size: 15px;
  color: #333333;
  margin-bottom: 5px;
}

.region-picker-value {
  font-size: 16px;
  color: #666666;
  line-height: 24px;
}

