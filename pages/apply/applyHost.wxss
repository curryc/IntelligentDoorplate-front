picker::-webkit-inner-spin-button, picker::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

picker {
  position: relative;
}

picker::-webkit-datetime-edit-year-field,
picker::-webkit-datetime-edit-month-field,
picker::-webkit-datetime-edit-day-field,
picker::-webkit-datetime-edit-text {
  color: transparent;
}
