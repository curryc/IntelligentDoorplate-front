.page {
  margin: 3%;
}

.o-menus {
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  justify-content: first baseline;
  align-items: center;
}

.explain {
  color: #ffffff;
  height: 70rpx;
  font-size: 30rpx;
  font-family: SimSun;
  font-weight: 600;
  background-color: #e64340;
  text-align: center;
  padding: 20rpx;
  margin: 5px;
  border-radius: 10%;
}

.top-line {
  color: #e64340;
  font-size: 50rpx;
  font-family: SimSun;
  font-weight: 100;
}

.top {
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  margin-bottom: 30rpx;
  border-radius: 5%;
}

.topimage {
  width: 100%;
  height: 150px;
  margin-left: 0rpx;
  margin-right: 0rpx;
  border-radius: 5%;
}

.login-button{
  height:fit-content;
  background-color: #e64340;
  font-size: 15px;
  color: white;
  margin-bottom: 20px;
}